<odoo>
  <record id="view_softy_pays_tree" model="ir.ui.view">
    <field name="name">softy.pays.tree</field>
    <field name="model">softy.pays</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <list>
        <field name="code"/>
        <field name="name"/>
      </list>
    </field>
  </record>

  <record id="view_softy_pays_form" model="ir.ui.view">
    <field name="name">softy.pays.form</field>
    <field name="model">softy.pays</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="code"/>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
