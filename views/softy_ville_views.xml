<odoo>
  <record id="view_softy_ville_tree" model="ir.ui.view">
    <field name="name">softy.ville.tree</field>
    <field name="model">softy.ville</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <list>
        <field name="code"/>
        <field name="name"/>
        <field name="code_postale"/>
        <field name="pays_id"/>
      </list>
    </field>
  </record>

  <record id="view_softy_ville_form" model="ir.ui.view">
    <field name="name">softy.ville.form</field>
    <field name="model">softy.ville</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="code"/>
            <field name="name"/>
            <field name="code_postale"/>
            <field name="pays_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
